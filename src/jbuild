(jbuild_version 1)

(library
  ((name pyre)
   (public_name pyre)
   (modules (:standard \ main))
   (libraries (
     pyre.pyreParser
     pyre.analysis
     pyre.ast
     pyre.service
     pyre.command
     pyre.external))))

(executable
  ((name main)
  (libraries (pyre))))

(alias
  ((name DEFAULT)
   (deps (main.exe))))

(install
  ((section bin)
   (files ((main.exe as pyre)))))
