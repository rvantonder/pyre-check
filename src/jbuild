(jbuild_version 1)

(library
  ((name pyre)
   (public_name pyre)
   (modules (:standard \ main))
   (libraries (pyre.pyreParser
               pyre.analysis
               pyre.ast
               pyre.service
               pyre.language_server
               pyre.command
               pyre.external))))

(executable
  ((libraries (core pyre))
   (name main)))

(alias
  ((name DEFAULT)
   (deps
  (main.exe))))

(install
  ((section bin)
   (files ((main.exe as pyre)))))
