(jbuild_version 1)

(library
  ((name pyre)
   (public_name pyre)
   (modules (:standard \ main))
  (preprocess
    (pps
      (ppx_deriving.eq
       ppx_deriving.show
       ppx_hash
       ppx_compare
       ppx_sexp_conv
       ppx_deriving_yojson)))
   (libraries (
     yojson
     ppx_deriving_yojson
     pyre.pyreParser
     pyre.analysis
     pyre.ast
     pyre.service
     pyre.command
     pyre.external))))

(executable
  ((name main)
  (preprocess
    (pps
      (ppx_deriving.eq
       ppx_deriving.show
       ppx_hash
       ppx_compare
       ppx_sexp_conv
       ppx_deriving_yojson)))
  (libraries (pyre))))

(alias
  ((name DEFAULT)
   (deps
  (main.exe))))

(install
  ((section bin)
   (files ((main.exe as pyre)))))
